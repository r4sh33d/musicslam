<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:textColor="?android:textColorPrimary"
                android:id="@+id/line_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Alright" />

            <TextView
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:id="@+id/line_two_text"
                android:textColor="?android:textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="Kendrick Lamar" />

        </LinearLayout>

        <com.r4sh33d.musicslam.customviews.BlackAndWhiteImageView
            android:id="@+id/overflow_menu"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"/>

    </LinearLayout>

    <com.r4sh33d.musicslam.customviews.DividerView
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_seperator_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
